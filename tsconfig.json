{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "jsx": "react-jsx",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2022"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "utils/*": ["utils/*"],
      "functions/*": ["functions/*"],
      "modules/*": ["modules/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["./**/*"]
}
